import java.util.ArrayList;

public class graph {
	private int vertices;
	private int edge;
	private ArrayList<Edge>[] adj;
	
	public graph(int vertices){
		this.vertices = vertices;
		ArrayList<Edge>[] adj = new ArrayList[vertices];
		for (int i = 0; i < vertices; i++ ){
			adj[i] = new ArrayList<Edge>();
		}
	}
	public void addEdge(int start, int end){
		validate(start, vertices);
		validate(end, vertices);
		Edge e = new Edge(start, end);
		adj[start].add(e);
		adj[end].add(e);
		edge++;
	}
	private void validate(int start, int vertices){
		if (start < 0 || start >= vertices) throw new IllegalArgumentException("the starting node is not in the right range");
				
	}
}
